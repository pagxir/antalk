<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<ImageView android:id="@+id/loginBusy" android:background="@drawable/login_head"
		android:layout_centerVertical="true" 
		android:layout_centerHorizontal="true" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	<Button android:id="@+id/start_record"
		android:paddingLeft="5sp"
		android:paddingRight="5sp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/start"
		android:layout_below="@+id/loginBusy"
		android:layout_centerHorizontal="true" />
	<Button android:id="@+id/stop_record"
		android:paddingLeft="5sp"
		android:paddingRight="5sp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/stop"
		android:layout_below="@+id/start_record"
		android:layout_centerHorizontal="true" />
</RelativeLayout>

